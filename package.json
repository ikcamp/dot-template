{
  "name": "dot-template",
  "displayName": "Dot Template",
  "description": "create new files according to pre-defined templates",
  "version": "0.0.5",
  "publisher": "qiu8310",
  "engines": {
    "vscode": "^1.9.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "template",
    "file",
    "variable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/dot-template"
  },
  "activationEvents": [
    "*",
    "onLanguage:dtpl",
    "onCommand:extension.createTemplateFile",
    "onCommand:extension.createRelatedFile",
    "onCommand:extension.rollbackCreates"
  ],
  "main": "./out/extension",
  "icon": "res/images/icon.png",
  "contributes": {
    "configuration": {
      "title": "dot-template",
      "type": "object",
      "properties": {
        "dot-template.dtplFolderName": {
          "type": "string",
          "default": ".dtpl",
          "description": "文件夹的名称，用于存放模板文件及相关配置文件"
        },
        "dot-template.dtplExtension": {
          "type": "string",
          "default": ".dtpl",
          "description": "指定 dtpl 模板文件的后缀名"
        },
        "dot-template.ejsExtension": {
          "type": "string",
          "default": ".ejs",
          "description": "指定 ejs 模板文件的后缀名"
        },
        "dot-template.njkExtension": {
          "type": "string",
          "default": ".njk",
          "description": "指定 nunjucks 模板文件的后缀名"
        },
        "dot-template.minimatchOptions": {
          "type": "object",
          "default": {
            "matchBase": true,
            "nocomment": true,
            "dot": true
          },
          "description": "minimatch 的选项，用于匹配模板名称, 参考：https://github.com/isaacs/minimatch#options",
          "properties": {
            "nobrace": {
              "type": "boolean",
              "description": "Do not expand {a,b} and {1..3} brace sets"
            },
            "noglobstar": {
              "type": "boolean",
              "description": "Disable ** matching against multiple folder names"
            },
            "dot": {
              "type": "boolean",
              "description": "Allow patterns to match filenames starting with a period, even if the pattern does not explicitly have a period in that spot"
            },
            "noext": {
              "type": "boolean",
              "description": "Disable 'extglob style patterns like +(a|b)"
            },
            "nocase": {
              "type": "boolean",
              "description": "Perform a case-insensitive match"
            },
            "matchBase": {
              "type": "boolean",
              "description": "If set, then patterns without slashes will be matched against the basename of the path if it contains slashes"
            },
            "nocomment": {
              "type": "boolean",
              "description": "Suppress the behavior of treating # at the start of a pattern as a comment"
            },
            "nonegate": {
              "type": "boolean",
              "description": "Suppress the behavior of treating a leading ! character as negation"
            },
            "flipNegate": {
              "type": "boolean",
              "description": "Returns from negate expressions the same as if they were not negated. (Ie, true on a hit, false on a miss.)"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "extension.createTemplateFile",
        "title": "DTPL: Create template files"
      },
      {
        "command": "extension.createRelatedFile",
        "title": "DTPL: Create related file"
      },
      {
        "command": "extension.rollbackCreates",
        "title": "DTPL: Rollback or recover created files"
      }
    ],
    "keybindings": [
      {
        "command": "extension.createTemplateFile",
        "key": "ctrl+k ctrl+p",
        "mac": "cmd+k cmd+p"
      },
      {
        "command": "extension.createRelatedFile",
        "key": "ctrl+k ctrl+s",
        "mac": "cmd+k cmd+s"
      },
      {
        "command": "extension.rollbackCreates",
        "key": "ctrl+k ctrl+u",
        "mac": "cmd+k cmd+u"
      }
    ],
    "languages": [
      {
        "id": "dtpl",
        "aliases": [
          "Dot Template",
          "dtpl"
        ],
        "extensions": [
          ".dtpl"
        ],
        "configuration": "./res/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dtpl",
        "scopeName": "source.dtpl",
        "path": "./res/syntaxes/dtpl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run build && node ./node_modules/vscode/bin/test"
  },
  "config": {
    "hooks": {
      "commit-msg": true,
      "post-merge": true
    }
  },
  "devDependencies": {
    "@types/fs-extra": "~4.0.2",
    "@types/minimatch": "~3.0.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "typescript": "^2.5.3",
    "vscode": "^1.1.5"
  },
  "dependencies": {
    "fs-extra": "~4.0.2",
    "minimatch": "~3.0.4",
    "mora-scripts": "~1.6.8",
    "ts-node": "~3.3.0",
    "tslib": "~1.8.0"
  }
}