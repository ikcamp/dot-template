{
  "name": "dot-template",
  "displayName": "Dot Template",
  "description": "create new files according to pre-defined templates",
  "version": "0.0.3",
  "publisher": "qiu8310",
  "engines": {
    "vscode": "^1.9.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "template",
    "file",
    "variable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/dot-template"
  },
  "activationEvents": [
    "onLanguage:dtpl",
    "onCommand:extension.createScriptFile",
    "onCommand:extension.createStyleFile"
  ],
  "main": "./out/extension",
  "icon": "res/images/icon.png",
  "contributes": {
    "configuration": {
      "title": "dot-template",
      "properties": {
        "dot-template.templatePathSeparator": {
          "type": "string",
          "default": ":",
          "description": "模板文件名称中的目录分隔符"
        },
        "dot-template.templateExtension": {
          "type": "string",
          "default": ".dtpl",
          "description": "模板文件的后缀名"
        },
        "dot-template.templateDirectory": {
          "type": "string",
          "default": ".dtpl",
          "description": "存放模板文件的文件夹的名称"
        },
        "dot-template.templateMinimatchOptions": {
          "type": "object",
          "default": {
            "matchBase": true,
            "nocomment": true,
            "dot": true
          },
          "description": "minimatch 的选项，用于匹配模板名称, 参考：https://github.com/isaacs/minimatch#options"
        },
        "dot-template.globalTemplateVariableFiles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "全局的自定义环境变量文件，支持 json, js, 和 ts 文件，需要使用绝对路径，路径名称中支持变量 `${npmPath}` 和 `${rootPath}` 等默认的环境变量"
        },
        "dot-template.localTemplateVariableFileName": {
          "type": "string",
          "default": "local",
          "description": "模板文件目录下的自定义环境变量的文件的名称，不包含路径，不包含后缀名，会自动检查带 `.json`, `.js`, `.ts` 后缀的文件是否存在，存在的话就使用它"
        },
        "dot-template.importStyleTemplate": {
          "type": "string",
          "default": "import './style/$rawModuleName.scss'",
          "description": "导入的样式文件模板（按 `cmd+k cmd+p`时生成的内容），路径中支持使用默认的环境变量和全局的环境变量"
        }
      }
    },
    "commands": [
      {
        "command": "extension.createScriptFile",
        "title": "Create Script File"
      },
      {
        "command": "extension.createStyleFile",
        "title": "Create Style File"
      }
    ],
    "keybindings": [
      {
        "command": "extension.createScriptFile",
        "key": "ctrl+k ctrl+p",
        "mac": "cmd+k cmd+p"
      },
      {
        "command": "extension.createStyleFile",
        "key": "ctrl+k ctrl+s",
        "mac": "cmd+k cmd+s"
      }
    ],
    "languages": [
      {
        "id": "dtpl",
        "aliases": [
          "Dot Template",
          "dtpl"
        ],
        "extensions": [
          ".dtpl"
        ],
        "configuration": "./res/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dtpl",
        "scopeName": "source.dtpl",
        "path": "./res/syntaxes/dtpl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run build && node ./node_modules/vscode/bin/test"
  },
  "config": {
    "hooks": {
      "commit-msg": true,
      "post-merge": true
    }
  },
  "devDependencies": {
    "@types/fs-extra": "~4.0.2",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "typescript": "^2.5.3",
    "vscode": "^1.1.5"
  },
  "dependencies": {
    "fs-extra": "~4.0.2",
    "minimatch": "~3.0.4",
    "mora-scripts": "~1.6.8",
    "naming-transform": "~0.1.0"
  }
}
